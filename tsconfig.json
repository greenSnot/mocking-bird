{
  "compilerOptions": {
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowJs": false,
    "moduleResolution": "node",
    "jsx": "react",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "mocking-frog": ["src"]
    }
  },
  "exclude": [
    "node_modules",
    "libs",
    "dist"
  ],
  "include": [
    "src",
    "test"
  ]
}